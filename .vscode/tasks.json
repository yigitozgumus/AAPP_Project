{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "c++",
            "args": [
                "-I",
                "~/InstalledPrograms/boost_1_67_0",
                "-std=c++1z",
                "src/example.cpp",
                "-o",
                "out/scc",
                "~/InstalledPrograms/boost_1_67_0/stage/lib/libboost_regex.a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test",
            "type" : "shell",
            "command": "./out/scc",
            "args": [
                "<",
                "input/jayne.txt"
            ]
        }
    ]
}