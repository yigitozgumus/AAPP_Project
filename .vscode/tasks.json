{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "c++",
            "args": [
                "-I",
                "/usr/local/Cellar/boost/1.67.0_1/",
                "-L",
                "/usr/local/lib",
                "-lgmp",
                "-lboost_regex-mt",
                "src/example.cpp",
                "-o",
                "out/scc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "./out/scc",
            "args": [
                "<",
                "input/jayne.txt"
            ]
        },
        {
            "label": "prototype",
            "type": "shell",
            "command": "./out/test",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "graph",
            "type": "shell",
            "command": "./out/graph",
            "args": [
                "./input/dfs.dot"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "prototype-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "/usr/local/Cellar/boost/1.67.0_1/",
                "-L",
                "/usr/local/lib",
                "-lgmp",
                "-lboost_graph-mt",
                "-lboost_regex-mt",
                "src/test.cpp",
                "-o",
                "out/test"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Project-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "/usr/local/Cellar/boost/1.67.0_1/",
                "-L",
                "/usr/local/lib",
                "-lgmp",
                "-lboost_graph-mt",
                "-lboost_regex-mt",
                "src/*.cpp",
                "-o",
                "out/Project"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "graph-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I",
                "/usr/local/Cellar/boost/1.67.0_1/",
                "-L",
                "/usr/local/lib",
                "-lgmp",
                "-lboost_graph-mt",
                "-lboost_regex-mt",
                "src/graph.cpp",
                "-o",
                "out/graph"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Project",
            "type": "shell",
            "command": "./out/Project",
            "args": [
                "./input/dfs.dot"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}